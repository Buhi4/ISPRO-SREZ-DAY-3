        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="95,235,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEnter" Content="Войти" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Width="110" Background="#FF97FFFF" Foreground="Black" Click="btnEnter_Click"/>
        <PasswordBox x:Name="bPass" HorizontalAlignment="Left" Margin="100,256,0,0" VerticalAlignment="Top" Width="168"  />
        <Button  HorizontalAlignment="Left" Margin="268,256,0,0" VerticalAlignment="Top" Height="18" Width="16" Visibility="Visible" Background="White" Click="Button_Click">
            <Image Source="/207-2073226_show-icon-png-white-password-view-icon.png" />
        </Button>



    </Grid>
</Window>
